@model QuizzAppl.Models.student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <title>sregister</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">

               
                @if (ViewBag.msg != null) 
                {
                <div class="alert alert-danger">
                    <strong>Error!</strong> @ViewBag
                </div>
                }




                <h2>Student Registrations</h2>
                <class ="container" style="width:40%"
                       @using (@Html.BeginForm("sregister" , "Home", FormMethod.Post, new {enctype = "multipart/form-data"})) 
                       {
                           <div class=" form-group">
                        <label for=" =" email>Email:</label>
                        @Html.TextBoxFor(x => x.std_name, htmlAttributes: new { @class = "form-control" })

                    </div>
                    <div class=" form-group">
                        <label for=" =" pwd>Password:</label>
                        @Html.PasswordFor(x => x.std_password, htmlAttributes: new { @class = "form-control" })
                    <</div>


                        <div class=" form-group">
                            <label for ="img ">Image:</label>
                            <input type="file" class="form-control class="btn btn-info" id="imgfile" name="imgfile"/>


                            <div>

                                <input type="submit" value="Register Now" class="btn-btn-primary btn-block" />


                            </div>

                        </div>
                        }

                        <div class="container-fluid">
                            <div class="col-lg-4 col-md-4 col-sm-4">

                            </div>

                        </div>
</body>
</html>